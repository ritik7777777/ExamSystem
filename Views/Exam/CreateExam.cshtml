<div class="container mt-4">
    <h2>Create Exam</h2>

    @if (ViewBag.Msg != null)
    {
        <div class="alert alert-success">@ViewBag.Msg</div>
    }

    <form method="post">
        <div class="mb-3">
            <label>Exam Name</label>
            <input type="text" name="examName" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Total Marks</label>
            <input type="number" name="totalMarks" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Duration (minutes)</label>
            <input type="number" name="duration" class="form-control" />
        </div>

        <button class="btn btn-primary">Create Exam</button>
        @Html.ActionLink("Back To ExamList","ExamList" )
    </form>
</div>
